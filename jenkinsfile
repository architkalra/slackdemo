pipeline {
    agent any

    options { timestamps() }

    stages {

        stage('Start Pipeline Notification') {
            steps {
                echo 'Starting Pipeline Job'
                build (job: 'Start')
            }
        }
        
        stage('Creating EC2 Instances') {
            steps {
                echo 'Creating EC2 Instances'
                build (job: 'ec2')
            }
        }

        stage('End Pipeline Notification') {
            steps {
                echo 'Ending Pipeline Job'
                build (job: 'End')
            }
        }

    }   
}
